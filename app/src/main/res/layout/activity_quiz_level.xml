<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.QuizLevelActivity"
    android:background="@color/bg">

    <TextView
        android:id="@+id/tv_level_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Level"
        android:textSize="@dimen/_24sdp"
        android:textColor="@color/black"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginBottom="@dimen/_50sdp"
        android:fontFamily="@font/hpsimplified_rg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_training"/>

    <Button
        android:id="@+id/btn_training"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="wrap_content"
        android:text="Training"
        android:layout_marginTop="@dimen/_50sdp"
        android:background="@drawable/btn_bg"
        app:layout_constraintBottom_toTopOf="@id/btn_easy"
        app:layout_constraintTop_toBottomOf="@id/tv_level_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_easy"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="wrap_content"
        android:text="Easy"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/btn_bg"
        app:layout_constraintBottom_toTopOf="@id/btn_medium"
        app:layout_constraintTop_toBottomOf="@id/btn_training"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_medium"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="wrap_content"
        android:text="Medium"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@drawable/btn_bg"
        app:layout_constraintBottom_toTopOf="@id/btn_hard"
        app:layout_constraintTop_toBottomOf="@id/btn_easy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_hard"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="wrap_content"
        android:text="Hard"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@drawable/btn_bg"
        app:layout_constraintTop_toBottomOf="@id/btn_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_insane"/>

    <Button
        android:id="@+id/btn_insane"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="wrap_content"
        android:text="Insane"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@drawable/btn_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_hard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>